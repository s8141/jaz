<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">
	<managed-bean>
		<managed-bean-name>temperatureConvertor</managed-bean-name>
		<managed-bean-class>de.vogella.jsf.first.model.TemperatureConvertor</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>myApplication</managed-bean-name>
		<managed-bean-class>com.kbielan.MyApplication</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>loginValidator</managed-bean-name>
		<managed-bean-class>com.kbielan.validator.LoginValidator</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>user</managed-bean-name>
		<managed-bean-class>com.kbielan.model.User</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>LoginView</display-name>
		<from-view-id>/LoginView.jsp</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/Admin.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>LoginView</display-name>
		<from-view-id>/LoginView.jsp</from-view-id>
		<navigation-case>
			<from-outcome>failed</from-outcome>
			<to-view-id>/FailedLogin.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Welcome</display-name>
		<from-view-id>/Welcome.jsp</from-view-id>
		<navigation-case>
			<from-outcome>info</from-outcome>
			<to-view-id>/Information.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Information</display-name>
		<from-view-id>/Information.jsp</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/Welcome.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Welcome</display-name>
		<from-view-id>/Welcome.jsp</from-view-id>
		<navigation-case>
			<from-outcome>admin</from-outcome>
			<to-view-id>/LoginView.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Admin</display-name>
		<from-view-id>/Admin.jsp</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/Welcome.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>FailedLogin</display-name>
		<from-view-id>/FailedLogin.jsp</from-view-id>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/Welcome.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Admin</display-name>
		<from-view-id>/Admin.jsp</from-view-id>
		<navigation-case>
			<from-outcome>info</from-outcome>
			<to-view-id>/Information.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>LoginView</display-name>
		<from-view-id>/LoginView.jsp</from-view-id>
		<navigation-case>
			<from-outcome>info</from-outcome>
			<to-view-id>/Information.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>FailedLogin</display-name>
		<from-view-id>/FailedLogin.jsp</from-view-id>
		<navigation-case>
			<from-outcome>info</from-outcome>
			<to-view-id>/Information.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<validator>
		<display-name>com.kbielan.validator.LoginValidator</display-name>
		<validator-id>com.kbielan.validator.LoginValidator</validator-id>
		<validator-class>com.kbielan.validator.LoginValidator</validator-class>
	</validator>

</faces-config>
